<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.keepmoving.to.yuancomponent.widget.CircleProgressView
        android:id="@+id/progress_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:anim_duration="1500"
        app:ring_width="8dp"
        app:show_anim="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/circle_progress_title_tip"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:id="@+id/current_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0.00"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/textsize_24sp" />

        <TextView
            android:id="@+id/total_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/circle_progress_total_tip"
            android:textSize="@dimen/textsize_14sp" />
    </LinearLayout>

    <TextView
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/circle_progress_upgrade_money"
        android:textSize="@dimen/textsize_16sp"
        android:visibility="gone" />
</merge>