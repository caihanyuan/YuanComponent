<?xml version="1.0" encoding="utf-8"?>
<com.keepmoving.to.yuancomponent.widget.ScaleInterceptLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/current_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp" />

    <com.keepmoving.to.yuancomponent.widget.linearscaleview.HorizontalScaleScrollView
        android:id="@+id/horizontalScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:overScrollMode="always"
        app:scale_view_accuracy="100"
        app:scale_view_defalut_color="#FFC5C5C5"
        app:scale_view_end_over_range="300dp"
        app:scale_view_extend="true"
        app:scale_view_height="14dip"
        app:scale_view_margin="5dip"
        app:scale_view_max_height="24dip"
        app:scale_view_outer_min="0"
        app:scale_view_pointer_color="@android:color/holo_red_dark"
        app:scale_view_text_margin="5dp"
        app:scale_view_text_size="10" />

</com.keepmoving.to.yuancomponent.widget.ScaleInterceptLinearLayout>